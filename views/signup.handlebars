<div class="signup-page d-flex flex-column">
  <div class="signup-header p-3">
    <h2>User Sign Up</h2>
  </div>
  <div class="signup-body p-2">
    <form class="form d-flex flex-column">
      <div class="form-group p-2">
        <label for="signup_name">Name:</label>
        <input class="form-input text-dark ms-6" type="text" id="signup_name"  placeholder="John Doe"/>
      </div>
      <div class="form-group p-2">
        <label for="singup_email">Email:</label>
        <input class="form-input text-dark ms-6" type="text" id="signup_email" placeholder="name@example.com" />
      </div>
      <div class="form-group p-2">
        <label for="signup_password">password:</label>
        <input class="form-input" type="password" id="signup_password" placeholder="password" />
      </div>
      <div class="form-group p-2">
        <button class="btn" id="sign_up_button" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/signup.js"></script>