<div class="newblog-page d-flex flex-column">
  <div class="newblog-header p-3">
    <h2>New Blog</h2>
  </div>
  <div class="signup-body p-2">
    <form class="form d-flex flex-column">
      <div class="form-group p-2">
        <label for="newblog_title">Title:</label>
        <input class="form-input text-dark ms-6 col-5" type="text" id="newblog_title"  placeholder="Title"/>
      </div>
      <div class="form-group p-2">
        <label for="newblog_text">Text:</label>
        <textarea name="newblog_text" id="newblog_text" rows="5" class="form-input text-dark ms-6 col-5"></textarea>
      </div>
      <div class="form-group p-2">
        <button class="btn" id="newblog_button" type="submit">Submit Blog</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/newblog.js"></script>